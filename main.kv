#:kivy 2.1.0
#: import FadeTransition kivy.uix.screenmanager.FadeTransition

MainScreenManager:
    transition: FadeTransition()
    MainScreen:
    SecondaryScreen:

<MainScreen>
    name: "main"
    FloatLayout:
        canvas.before:
            Color:
                rgba: 0.25, 0.4, 1, 1
            Rectangle:
                # self here refers to the widget i.e FloatLayout
                pos: self.pos
                size: self.size
        Button:
            on_release: app.root.current = "secondary"
            text: 'Brolly?'
            size_hint: .5, .5
            pos_hint: {'center_x':.5, 'center_y': .5}

<SecondaryScreen>
    name: "secondary"
    Button:
        on_release: app.root.current = "main"
        color: 0,1,0,1
		font_size: 25
		size_hint: 0.3,0.2
		text: "Back"
		on_release: app.root.current = "main" 
		pos_hint: {"right":1, "top":1}
